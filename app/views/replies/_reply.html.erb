<div id="<%= dom_id(reply) %>" class="flex items-start space-x-3 p-3 hover:bg-gray-50 rounded-lg transition-colors duration-150">
  <!-- Avatar -->
  <div class="w-8 h-8 bg-indigo-500 rounded-full flex items-center justify-center text-white font-medium text-sm shadow-sm">
    <%= reply.user.email.first.upcase %>
  </div>

  <div class="flex-1 min-w-0">
    <div class="flex items-center space-x-2 mb-1">
      <span class="text-sm font-semibold text-gray-900"><%= reply.user.email %></span>
      <span class="text-xs text-gray-400"><%= reply.created_at.strftime("%H:%M") %></span>
      <% if reply.updated_at != reply.created_at %>
        <span class="text-xs text-gray-400">(edited)</span>
      <% end %>
    </div>

    <div class="text-sm text-gray-800 leading-relaxed">
      <%= reply.body %>
    </div>
  </div>
</div>