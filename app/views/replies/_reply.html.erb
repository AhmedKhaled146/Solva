<div id="<%= dom_id(reply) %>" class="flex items-start space-x-3 group">
  <!-- Avatar -->
  <div class="w-6 h-6 bg-gray-400 rounded-full flex items-center justify-center text-white text-xs">
    <%= reply.user.email.first.upcase %>
  </div>

  <div class="flex-1">
    <div class="flex items-center space-x-2">
      <span class="text-xs font-bold text-gray-700"><%= reply.user.email %></span>
      <span class="text-xs text-gray-400"><%= reply.created_at.strftime("%H:%M") %></span>
    </div>
    <p class="text-sm text-gray-800 mt-1"><%= reply.body %></p>
  </div>
</div>