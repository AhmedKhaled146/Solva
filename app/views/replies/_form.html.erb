<%= turbo_frame_tag "reply_form_#{message.id}" do %>
  <%= form_with(model: [workspace, channel, message, reply], 
                class: "mt-2",
                data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |f| %>
    
    <div class="flex flex-col space-y-2">
      <%= f.text_area :body, 
                      rows: 2,
                      placeholder: "Reply...",
                      class: "w-full p-2 border rounded-lg focus:outline-none focus:border-blue-500 text-sm resize-none" %>
      
      <div class="flex justify-end">
        <%= f.submit "Reply", class: "px-3 py-1 bg-blue-600 text-white text-sm rounded hover:bg-blue-700" %>
      </div>
    </div>
  <% end %>
<% end %>