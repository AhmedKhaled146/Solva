<%= turbo_frame_tag request.headers["Turbo-Frame"] == "message_thread" ? "message_thread" : dom_id(@message) do %>
  <div class="p-4">
    <div class="flex items-center mb-4">
      <svg class="w-5 h-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
      </svg>
      <h2 class="text-lg font-bold text-gray-900">Edit Message</h2>
    </div>
    <%= render "form", message: @message, workspace: @workspace, channel: @channel %>
  </div>
<% end %>