<%= turbo_frame_tag "message_thread" do %>
  <%= turbo_stream_from @message %>

  <div class="flex flex-col h-full relative">
    <!-- Close Button -->
    <button onclick="document.getElementById('message_thread').classList.add('hidden'); document.getElementById('message_thread').innerHTML = '';"
            class="absolute top-4 right-4 text-gray-500 hover:text-black z-10">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Fixed Header -->
    <div class="p-4 border-b flex-shrink-0 bg-white z-0">
      <h2 class="text-lg font-bold">Thread</h2>
      <div class="mt-2 text-sm text-gray-500"># <%= @channel.name %></div>
    </div>

    <div class="flex-1 overflow-y-auto p-4 min-h-0">
      <!-- Original Message -->
      <div class="mb-6 group relative">
         <%= render "messages/message", message: @message, workspace: @workspace, channel: @channel, inside_thread: true %>
         
         <% if @message.user == current_user %>
           <div class="flex space-x-2 mt-2 ml-11">
             <%= link_to "Edit",
                         edit_workspace_channel_message_path(@workspace, @channel, @message),
                         data: { turbo_frame: "message_thread" },
                         class: "text-xs text-gray-500 hover:text-blue-600 font-medium px-2 py-1 rounded transition duration-150 ease-in-out" %>

             <%= button_to "Delete",
                           workspace_channel_message_path(@workspace, @channel, @message),
                           method: :delete,
                           class: "text-xs text-red-500 hover:text-red-700 font-medium bg-transparent border-0 px-2 py-1 rounded transition duration-150 ease-in-out cursor-pointer" %>
           </div>
         <% end %>
      </div>

      <div class="border-t my-4 relative">

      <!-- Replies List -->
      <div id="message_<%= @message.id %>_replies" class="space-y-4 mb-4 pb-2">
        <%= render @message.replies %>
      </div>
    </div>

    <!-- Fixed Reply Form at Bottom -->
    <div class="bg-white border-t p-4 sticky bottom-0">
      <%= render "replies/form", message: @message, reply: Reply.new, workspace: @workspace, channel: @channel %>
    </div>
    </div>
  </div>
<% end %>