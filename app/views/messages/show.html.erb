<%= turbo_frame_tag "message_thread" do %>
  <%= turbo_stream_from @message %>

  <div class="flex flex-col h-screen bg-white">
    <!-- Thread Header -->
    <div class="bg-white border-b border-gray-200 p-4 flex-shrink-0">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <svg class="w-5 h-5 text-gray-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          <h2 class="text-lg font-bold text-gray-900">Thread</h2>
        </div>

        <!-- Close Button -->
        <button onclick="document.getElementById('message_thread').classList.add('hidden'); document.getElementById('message_thread').innerHTML = '';"
                class="p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-full focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-colors duration-150">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <div class="mt-2 text-sm text-gray-500">
        in <span class="font-medium"># <%= @channel.name %></span>
      </div>
    </div>

    <!-- Messages Container -->
    <div class="flex-1 overflow-y-auto p-4 space-y-4 min-h-0">
      <!-- Original Message -->
      <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
        <%= render "messages/message", message: @message, workspace: @workspace, channel: @channel, inside_thread: true, current_user: current_user %>
        <!-- Message Actions -->
        <% if defined?(current_user) && current_user && @message.user == current_user %>
          <div class="mt-3 pt-3 border-t border-gray-200 flex items-center space-x-3">
            <%= link_to edit_workspace_channel_message_path(@workspace, @channel, @message),
                        data: { turbo_frame: "message_thread" },
                        class: "inline-flex items-center px-2 py-1 text-xs font-medium text-blue-600 hover:text-blue-800 bg-blue-50 hover:bg-blue-100 rounded transition-colors duration-150" do %>
              <svg class="w-3 h-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              Edit
            <% end %>

            <%= button_to workspace_channel_message_path(@workspace, @channel, @message),
                          method: :delete,
                          data: { confirm: "Are you sure you want to delete this message?" },
                          class: "inline-flex items-center px-2 py-1 text-xs font-medium text-red-600 hover:text-red-800 bg-red-50 hover:bg-red-100 rounded transition-colors duration-150" do %>
              <svg class="w-3 h-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
              Delete
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Divider -->
      <div class="flex items-center">
        <div class="flex-1 border-t border-gray-200"></div>
        <div class="mx-4 text-sm text-gray-500 font-medium">
          <%= pluralize(@message.replies.count, 'reply') %>
        </div>
        <div class="flex-1 border-t border-gray-200"></div>
      </div>

      <!-- Replies List -->
      <div id="message_<%= @message.id %>_replies" class="flex-1 overflow-y-auto p-4 space-y-4 bg-gray-50">
        <% if @message.replies.any? %>
          <%= render @message.replies %>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            <p class="mt-2 text-sm text-gray-500">No replies yet</p>
            <p class="text-xs text-gray-400">Be the first to reply to this message</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Reply Form -->
    <div class="bg-white border-t border-gray-200 p-4 flex-shrink-0">
      <%= render "replies/form", message: @message, reply: Reply.new, workspace: @workspace, channel: @channel %>
    </div>
  </div>
<% end %>