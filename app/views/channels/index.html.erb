<div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-8">
    <div class="mt-8 px-6">
  <div class="flex justify-between items-center mb-4">
    <h3 class="text-lg font-semibold text-gray-800">Channels</h3>
    <div class="flex space-x-4">
      <%= link_to 'New Channel', new_workspace_channel_path(@workspace),
                  class: 'inline items-center px-4 py-2 border border-indigo-600 rounded-md text-sm font-medium text-indigo-600 hover:bg-indigo-600 hover:text-white transition-colors duration-150' %>
      <%= link_to 'Back', workspace_path(@workspace), class: "inline bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded" %>
    </div>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Name
        </th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Description
        </th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Privacy
        </th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Actions
        </th>
      </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
      <% @channels.each do |channel| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            <%= channel.name %>
          </td>
          <td class="px-6 py-4 text-sm text-gray-900">
            <%= channel.description %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            <%= channel.privacy %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm">
            <div class="flex gap-2">
              <%= link_to 'View', workspace_channel_path(@workspace, channel),
                          class: 'text-indigo-600 hover:text-indigo-900' %>
              <%= link_to 'Edit', edit_workspace_channel_path(@workspace, channel),
                          class: 'text-indigo-600 hover:text-indigo-900' %>
              <%= button_to 'Delete', workspace_channel_path(@workspace, channel),
                            method: :delete,
                            data: { turbo_confirm: "Are you sure?" },
                            class: 'text-red-600 hover:text-red-900 bg-transparent border-none p-0' %>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
  </div>
</div>
