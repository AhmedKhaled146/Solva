<!-- Channel Show Page -->
<%= turbo_stream_from "channel_#{@channel.id}" %>

<div id="channel-show" data-channel-id="<%= @channel.id %>" class="flex bg-gray-50 h-screen">
  <!-- Channel Details Sidebar -->
  <div class="w-80 bg-white border-r border-gray-200 flex flex-col">
    <div class="p-6 flex-1 overflow-y-auto">
      <!-- Header -->
      <div class="mb-6">
        <h2 class="text-xl font-bold text-gray-900 mb-2">Channel Details</h2>
        <div class="h-1 w-16 bg-indigo-600 rounded-full"></div>
      </div>

      <!-- Channel Information -->
      <div class="bg-white rounded-lg border border-gray-200 overflow-hidden mb-6">
        <div class="bg-gray-50 px-4 py-2 border-b border-gray-200">
          <h3 class="text-sm font-medium text-gray-700">Channel Information</h3>
        </div>
        <div class="divide-y divide-gray-200">
          <div class="px-4 py-3">
            <div class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Channel Name</div>
            <div class="text-sm font-medium text-gray-900"># <%= @channel.name %></div>
          </div>
          <div class="px-4 py-3">
            <div class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Description</div>
            <div class="text-sm text-gray-900"><%= @channel.description.presence || 'No description' %></div>
          </div>
          <div class="px-4 py-3">
            <div class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Privacy</div>
            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= @channel.privacy == 'public' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
              <%= @channel.privacy.capitalize %>
            </span>
          </div>
          <div class="px-4 py-3">
            <div class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Created</div>
            <div class="text-sm text-gray-900"><%= @channel.created_at.strftime("%B %d, %Y") %></div>
          </div>
        </div>
      </div>

      <!-- Workspace Members Section -->
      <div class="mb-6">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-semibold text-gray-900">Workspace Members</h3>
          <%= link_to workspace_memberships_path(@workspace),
                      class: "inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md text-indigo-600 hover:text-indigo-800 border border-indigo-600 hover:border-indigo-800 transition-colors duration-150" do %>
            View All
          <% end %>
        </div>

        <div class="space-y-2">
          <% @workspace.users.each do |user| %>
            <% membership = @workspace.memberships.find { |m| m.user_id == user.id } %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg border border-gray-100">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-indigo-500 rounded-full flex items-center justify-center text-white font-medium">
                  <%= user.email.first.upcase %>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900 truncate max-w-[150px]"><%= user.email %></p>
                  <p class="text-xs text-gray-500"><%= membership.role || "member" %></p>
                </div>
              </div>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                         <%= case membership.role
                             when "owner" then "bg-yellow-100 text-yellow-800"
                             when "admin" then "bg-purple-100 text-purple-800"
                             else "bg-gray-100 text-gray-600"
                             end %>">
                <%= (membership&.role || "member").capitalize %>
              </span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Back Button -->
      <div class="pt-4 border-t border-gray-200">
        <%= link_to @workspace,
                    class: "inline-flex items-center w-full justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-150" do %>
          <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Workspace
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main Chat Area -->
  <div class="flex-1 flex flex-col overflow-hidden">
    <!-- Channel Header -->
    <div class="bg-white border-b border-gray-200 px-6 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <div class="w-8 h-8 bg-indigo-500 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </div>
          <div>
            <h1 class="text-xl font-bold text-gray-900"># <%= @channel.name %></h1>
            <p class="text-sm text-gray-500"><%= @channel.description.presence || 'No description' %></p>
          </div>
        </div>
        <div class="text-xs text-gray-400">
          <%= @channel.privacy.capitalize %> channel
        </div>
      </div>
    </div>

    <!-- Messages Area -->
    <div id="messages" class="flex-1 overflow-y-auto p-6 bg-gray-50">
      <% if @channel.messages.empty? %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No messages yet</h3>
          <p class="mt-1 text-sm text-gray-500">Start the conversation by sending a message.</p>
        </div>
      <% else %>
        <div class="space-y-4">
          <%= render @channel.messages, current_user: current_user %>
        </div>
      <% end %>
    </div>

    <!-- Message Input -->
    <div id="messages" class="flex-1 overflow-y-auto p-6 bg-gray-50">
    <%= form_with(
            model: [@workspace, @channel, Message.new],
            url: workspace_channel_messages_path(@workspace, @channel),
            local: true,
            class: "flex items-end space-x-3"
          ) do |f| %>
        <div class="flex-1">
          <div class="relative">
            <%= f.text_area :body,
                            rows: 1,
                            placeholder: "Type your message...",
                            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 resize-none text-sm",
                            onkeydown: "if(event.key === 'Enter' && !event.shiftKey) { event.preventDefault(); this.form.submit(); }" %>
            <div class="absolute inset-y-0 right-0 flex items-center pr-3">
              <svg class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
            </div>
          </div>
          <p class="mt-1 text-xs text-gray-500">Press Enter to send, Shift+Enter for new line</p>
        </div>
        <%= f.button type: "submit",
                     class: "inline-flex items-center px-4 py-3 border border-transparent text-sm font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-150" do %>
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
          </svg>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Thread Panel (Hidden by default) -->
  <turbo-frame id="message_thread" class="hidden w-96 border-l border-gray-200 bg-white shadow-lg flex flex-col min-h-0">
  </turbo-frame>
</div>

<style>
    /* Smooth transitions for thread panel */
    .turbo-frame {
        transition: all 0.3s ease;
    }

    .turbo-frame:not(.hidden) {
        transform: translateX(0);
    }
</style>