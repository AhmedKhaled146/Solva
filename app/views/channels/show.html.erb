<%= turbo_stream_from "channel_#{@channel.id}" %>

<div id="channel-show" data-channel-id="<%= @channel.id %>" class="flex bg-gray-100 w-full">
  <!-- Channel Details Sidebar -->
  <div class="max-w-[400px] bg-white border-r h-screen flex flex-col">
    <div class="p-4 flex-1 overflow-y-auto">
      <h2 class="text-xl font-bold mb-4">Channel Details</h2>
      <div class="border rounded-lg overflow-hidden">
        <table class="w-full">
          <tbody>
          <tr class="border-b">
            <td class="px-4 py-2 bg-gray-50 text-sm text-gray-600">Channel Name</td>
            <td class="px-4 py-2 font-medium"><%= @channel.name %></td>
          </tr>
          <tr class="border-b">
            <td class="px-4 py-2 bg-gray-50 text-sm text-gray-600">Description</td>
            <td class="px-4 py-2 font-medium"><%= @channel.description %></td>
          </tr>
          <tr class="border-b">
            <td class="px-4 py-2 bg-gray-50 text-sm text-gray-600">Privacy</td>
            <td class="px-4 py-2 font-medium capitalize"><%= @channel.privacy %></td>
          </tr>
          <tr>
            <td class="px-4 py-2 bg-gray-50 text-sm text-gray-600">Created</td>
            <td class="px-4 py-2 font-medium"><%= @channel.created_at.strftime("%B %d, %Y") %></td>
          </tr>
          </tbody>
        </table>
      </div>

      <!-- Workspace Members Section -->
      <div class="mt-6">
        <div class="flex justify-between items-center mb-3">
          <h3 class="text-lg font-semibold">Workspace Members</h3>
          <%= link_to "Show all users",
                      workspace_memberships_path(@workspace),
                      class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
        <div class="space-y-2">
          <% @workspace.users.each do |user| %>
            <div class="flex items-center justify-between p-2 bg-gray-50 rounded">
              <div class="flex items-center">
                <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white">
                  <%= user.email.first.upcase %>
                </div>
                <div class="ml-2">
                  <p class="text-sm font-medium overflow-auto max-w-[200px]"><%= user.email %></p>
                  <p class="text-xs text-gray-500">
                    <% membership = @workspace.memberships.find { |m| m.user_id == user.id } %>
                    <%= membership&.role || "member" %>
                  </p>
                </div>
              </div>
              <span class="text-xs px-2 py-1 rounded-full
                         <%= case membership&.role
                             when "owner" then "bg-yellow-100 text-yellow-800"
                             when "admin" then "bg-purple-100 text-purple-800"
                             else "bg-gray-100 text-gray-600"
                             end %>">
                <%= (membership&.role || "member").capitalize %>
              </span>
            </div>
          <% end %>
        </div>
      </div>

      <%= link_to 'Back', @workspace, class: "mt-4 inline-block bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded" %>
    </div>
  </div>

  <!-- Main Chat Area -->
  <div class="flex-1 flex flex-col h-screen">

  <!-- Channel Header -->
    <div class="bg-white border-b px-6 py-4">
      <h1 class="text-xl font-bold"># <%= @channel.name %></h1>
    </div>
    <!-- Messages Area -->
    <div class="flex-1 overflow-y-auto p-4 space-y-4" id="messages">
      <%= render @channel.messages %>
    </div>
    <!-- Message Input -->
    <div class="bg-white border-t p-4">
      <%= form_with(
            model: [@workspace, @channel, Message.new],
            url: workspace_channel_messages_path(@workspace, @channel),
            local: true,
            class: "flex items-center space-x-2"
          ) do |f| %>
        <%= f.text_field :body,
                         placeholder: "Type your message...",
                         class: "flex-1 border rounded-lg px-4 py-2 focus:outline-none focus:border-blue-500" %>
        <%= f.submit "Send",
                     class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded" %>
      <% end %>
    </div>
  </div>
  <turbo-frame id="message_thread" class="w-[400px] hidden w-96 border-l border-gray-200 bg-white overflow-y-auto relative shadow-lg">
  </turbo-frame>
</div>

<script>
    document.addEventListener("turbo:frame-load", (event) => {
        if (event.target.id === "message_thread") {
            event.target.classList.remove("hidden");
        }
    });
</script>