<div class="flex h-screen bg-gray-100 w-full">
  <!-- Channel Details Sidebar -->
  <div class="w-[300px] bg-white border-r">
    <div class="p-4">
      <h2 class="text-xl font-bold mb-4">Channel Details</h2>

      <div class="border rounded-lg overflow-hidden">
        <table class="w-full">
          <tbody>
          <tr class="border-b">
            <td class="px-4 py-2 bg-gray-50 text-sm text-gray-600">Channel Name</td>
            <td class="px-4 py-2 font-medium"><%= @channel.name %></td>
          </tr>
          <tr class="border-b">
            <td class="px-4 py-2 bg-gray-50 text-sm text-gray-600">Description</td>
            <td class="px-4 py-2 font-medium"><%= @channel.description %></td>
          </tr>
          <tr class="border-b">
            <td class="px-4 py-2 bg-gray-50 text-sm text-gray-600">Privacy</td>
            <td class="px-4 py-2 font-medium capitalize"><%= @channel.privacy %></td>
          </tr>
          <tr>
            <td class="px-4 py-2 bg-gray-50 text-sm text-gray-600">Created</td>
            <td class="px-4 py-2 font-medium"><%= @channel.created_at.strftime("%B %d, %Y") %></td>
          </tr>
          </tbody>
        </table>
      </div>
      <%= link_to 'Back', :back, class: "mt-4 inline-block bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded" %>
    </div>
  </div>

  <!-- Main Chat Area -->
  <div class="flex-1 flex flex-col">
    <!-- Channel Header -->
    <div class="bg-white border-b px-6 py-4">
      <h1 class="text-xl font-bold"># <%= @channel.name %></h1>
    </div>

    <!-- Messages Area -->
    <div class="flex-1 overflow-y-auto p-6 space-y-4">
      <!-- Messages will be populated here -->
    </div>

    <!-- Message Input -->
    <div class="bg-white border-t p-4">
      <div class="flex items-center space-x-2">
        <input type="text" placeholder="Type your message..." class="flex-1 border rounded-lg px-4 py-2 focus:outline-none focus:border-blue-500">
        <button class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded">
          Send
        </button>
      </div>
    </div>
  </div>
</div>