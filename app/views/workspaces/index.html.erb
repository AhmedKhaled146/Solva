<div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-8">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-900">Your Workspaces</h1>

      <% if @workspaces.empty? %>
        <%= link_to new_workspace_path,
                    class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          Create Workspace
        <% end %>
      <% end %>
    </div>

    <div class="space-y-3">
      <% @workspaces.each do |workspace| %>
        <% membership = workspace.memberships.find { |m| m.user_id == current_user.id } %>

        <div class="flex items-center justify-between bg-white rounded-lg shadow-sm px-4 py-3">
          <div>
            <%= link_to workspace_path(workspace),
                        class: "text-lg font-medium text-gray-900 hover:text-indigo-600 transition duration-150 ease-in-out" do %>
              <%= workspace.name %>
            <% end %>

            <% if membership.present? %>
              <p class="text-xs text-gray-500 mt-1">
                Your role:
                <span class="font-semibold">
                  <%= membership.role.humanize %>
                </span>
              </p>
            <% end %>
          </div>

          <div class="text-xs text-gray-400">
            Created: <%= workspace.created_at.strftime("%Y-%m-%d") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>