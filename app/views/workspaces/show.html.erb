<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="p-6 border-b border-gray-200">
      <h2 class="text-2xl font-bold text-gray-800"><%= @workspace.name %></h2>
    </div>

    <!-- Workspace Information Table -->
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Workspace name
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Invite Someone
          </th>
        </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
        <tr>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            <%= @workspace.name %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm">
            <% invite_link = "http://localhost:3000/workspaces/#{@workspace.invited_token}" %>
            <div class="flex items-center gap-2 max-w-md">
              <span
                id="invite-link-<%= @workspace.id %>"
                class="text-xs text-gray-700 break-all"
              >
                <%= invite_link %>
              </span>
              <button
                onclick="navigator.clipboard.writeText('<%= invite_link %>')"
                class="px-2 py-1 border rounded text-sm text-indigo-600 hover:bg-indigo-50"
                title="Copy invite link"
              >
                Copy
              </button>
            </div>
          </td>
        </tr>
        </tbody>
      </table>
    </div>
    <div class="px-6 py-4 flex gap-4">
      <%= link_to 'Edit Workspace', edit_workspace_path,
                  class: 'inline-flex items-center px-4 py-2 border border-indigo-600 rounded-md text-sm font-medium text-indigo-600 hover:bg-indigo-600 hover:text-white transition-colors duration-150' %>

      <%= button_to 'Delete Workspace', @workspace,
                    method: :delete,
                    data: { turbo_confirm: "Are you sure?" },
                    class: 'inline-flex items-center px-4 py-2 border border-red-600 rounded-md text-sm font-medium text-red-600 hover:bg-red-600 hover:text-white transition-colors duration-150' %>

      <%= link_to 'Back', workspaces_path,
                  class: 'inline-flex items-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors duration-150' %>
    </div>

    <!-- Channels Table -->
    <div class="mt-8 px-6">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-lg font-semibold text-gray-800">Channels</h3>
        <div class="flex items-center gap-4">
          <%= link_to 'New Channel', new_workspace_channel_path(@workspace),
                      class: 'inline-flex items-center px-4 py-2 border border-indigo-600 rounded-md text-sm font-medium text-indigo-600 hover:bg-indigo-600 hover:text-white transition-colors duration-150' %>

          <%= link_to workspace_channels_path(@workspace),
                      class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            Show All Channels
          <% end %>
        </div>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Name
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Description
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Privacy
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Actions
            </th>
          </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
          <% @channels.each do |channel| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= channel.name %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900">
                <%= channel.description %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= channel.privacy %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <div class="flex gap-2">
                  <%= link_to 'View', workspace_channel_path(@workspace, channel),
                  class: 'text-indigo-600 hover:text-indigo-900' %>
                  <%= link_to 'Edit', edit_workspace_channel_path(@workspace, channel),
                  class: 'text-indigo-600 hover:text-indigo-900' %>
                  <%= button_to 'Delete', workspace_channel_path(@workspace, channel),
                  method: :delete,
                  data: { turbo_confirm: "Are you sure?" },
                  class: 'text-red-600 hover:text-red-900 bg-transparent border-none p-0' %>
                </div>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>