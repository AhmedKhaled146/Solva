<!-- Simple Workspace Show Page with Tailwind CSS -->
<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Header Section -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
      <div class="px-6 py-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
          <div class="flex items-center space-x-4">
            <div>
              <h1 class="text-3xl font-bold text-gray-900">
                <%= @workspace.name %>
              </h1>
              <p class="text-sm text-gray-600 mt-1">
                Workspace managed with care and organization
              </p>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="mt-6 sm:mt-0 flex flex-col sm:flex-row gap-3">
            <%= link_to edit_workspace_path(@workspace),
                        class: "inline-flex items-center justify-center px-4 py-2 border border-blue-600 text-sm font-medium rounded-lg text-blue-600 hover:bg-blue-600 hover:text-white transition duration-200" do %>
              <svg class="w-4 h-4 ml-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
              </svg>
              Edit Workspace
            <% end %>

            <%= link_to workspaces_path,
                        class: "inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 hover:bg-gray-50 transition duration-200" do %>
              <svg class="w-4 h-4 ml-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L4.414 9H17a1 1 0 110 2H4.414l5.293 5.293a1 1 0 010 1.414z" clip-rule="evenodd"/>
              </svg>
              Back
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Workspace Information Section -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
      <div class="px-6 py-6 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 ml-2 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
              Workspace Information
        </h2>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <tbody class="bg-white divide-y divide-gray-200">
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 w-1/3">
              Workspace Name
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <div class="flex items-center">
                <%= @workspace.name %>
              </div>
            </td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              Invite Members
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <div class="flex flex-col sm:flex-row gap-3 items-start sm:items-center">
                <div class="flex-1">
                  <div class="flex items-center space-x-2">
                    <input type="text"
                           value="<%= "http://localhost:3000/workspaces/#{@workspace.invited_token}" %>"
                           class="flex-1 px-3 py-2 border border-gray-300 rounded-md text-sm bg-gray-50"
                           readonly>
                  </div>
                  <p class="text-xs text-gray-500 mt-1">
                    Share this link with people you want to invite
                  </p>
                </div>
                <%= link_to invite_workspace_path(@workspace),
                            class: "inline-flex items-center px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 transition duration-200" do %>
                  <svg class="w-4 h-4 ml-2" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z"/>
                  </svg>
                  Invite Someone
                <% end %>
              </div>
            </td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Channels Section -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="px-6 py-6 border-b border-gray-200">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
          <h2 class="text-xl font-semibold text-gray-900 flex items-center">
            <svg class="w-5 h-5 ml-2 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"/>
              <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z"/>
            </svg>
            Channels
          </h2>

          <div class="mt-4 sm:mt-0 flex flex-col sm:flex-row gap-3">
            <%= link_to new_workspace_channel_path(@workspace),
                        class: "inline-flex items-center px-4 py-2 border border-purple-600 text-sm font-medium rounded-lg text-purple-600 hover:bg-purple-600 hover:text-white transition duration-200" do %>
              <svg class="w-4 h-4 ml-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
              </svg>
              New Channel
            <% end %>

            <%= link_to workspace_channels_path(@workspace),
                        class: "inline-flex items-center px-4 py-2 bg-purple-600 text-white text-sm font-medium rounded-lg hover:bg-purple-700 transition duration-200" do %>
              All Channels
            <% end %>
          </div>
        </div>
      </div>

      <!-- Channels Table -->
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              Channel Name
            </th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              Description
            </th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              Privacy
            </th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              Actions
            </th>
          </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
          <% if @channels.present? %>
            <% @channels.each do |channel| %>
              <tr class="hover:bg-gray-50 transition duration-150">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <%= link_to channel.name,
                                workspace_channel_path(@workspace, channel),
                                class: "text-sm font-medium text-purple-600 hover:text-purple-900 transition duration-200" %>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-900">
                    <%= channel.description.presence || "No description" %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if channel.privacy == "public" %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <svg class="w-3 h-3 ml-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        Public
                      </span>
                  <% else %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        <svg class="w-3 h-3 ml-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M18 8a6 6 0 01-7.743 5.743L10 14l-1 1-1 1H6v2H2v-4l4.257-4.257A6 6 0 1118 8zm-6-4a1 1 0 100 2 2 2 0 012 2 1 1 0 102 0 4 4 0 00-4-4z" clip-rule="evenodd"/>
                        </svg>
                        Private
                      </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <div class="flex items-center space-x-2">
                    <%= link_to workspace_channel_path(@workspace, channel),
                                class: "inline-flex items-center px-3 py-1 border border-gray-300 text-xs font-medium rounded-md text-gray-700 hover:bg-gray-50 transition duration-200" do %>
                      <svg class="w-3 h-3 ml-1" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                        <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
                      </svg>
                      show
                    <% end %>
                    <% if @workspace.role_owner?(current_user) || @workspace.role_admin?(current_user) %>
                      <%= link_to edit_workspace_channel_path(@workspace, channel),
                                  class: "inline-flex items-center px-3 py-1 border border-indigo-600 text-xs font-medium rounded-md text-indigo-600 hover:bg-indigo-600 hover:text-white transition duration-200" do %>
                        <svg class="w-3 h-3 ml-1" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
                        </svg>
                        edit
                      <% end %>

                      <%= button_to workspace_channel_path(@workspace, channel),
                                    method: :delete,
                                    data: { turbo_confirm: "Are you sure to delete this channel?" },
                                    class: "inline-flex items-center px-3 py-1 border border-red-600 text-xs font-medium rounded-md text-red-600 hover:bg-red-600 hover:text-white transition duration-200" do %>
                        <svg class="w-3 h-3 ml-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
                        </svg>
                         delete
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% end %>
          <% else %>
            <tr>
              <td colspan="4" class="px-6 py-12 text-center">
                <div class="flex flex-col items-center">
                  <svg class="w-12 h-12 text-gray-400 mb-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"/>
                    <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z"/>
                  </svg>
                  <h3 class="text-lg font-medium text-gray-900 mb-2">No Channels Yet</h3>
                  <p class="text-sm text-gray-600 mb-4">
                    Start First Channel in your Workspace
                  </p>
                  <%= link_to new_workspace_channel_path(@workspace),
                              class: "inline-flex items-center px-4 py-2 bg-purple-600 text-white text-sm font-medium rounded-lg hover:bg-purple-700 transition duration-200" do %>
                    <svg class="w-4 h-4 ml-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
                    </svg>
                    New Channel
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Danger Zone -->
    <div class="mt-6">
      <div class="bg-red-50 border border-red-200 rounded-lg p-6">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <div>
              <h3 class="text-lg font-medium text-red-800">Danger Zone</h3>
              <p class="text-sm text-red-600 mt-1">
                Deleting the workspace will permanently delete all channels and content
              </p>
            </div>
          </div>
          <%= button_to 'Delete', workspace_path(@workspace),
                        method: :delete,
                        data: { turbo_confirm: "Are you sure to delete this workspace?" },
                        class: 'text-red-600 hover:text-red-900 bg-transparent border-none p-0' %>
        </div>
      </div>
    </div>
  </div>
</div>