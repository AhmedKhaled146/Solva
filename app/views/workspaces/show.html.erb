<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="p-6 border-b border-gray-200">
      <h2 class="text-2xl font-bold text-gray-800"><%= @workspace.name %></h2>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Workspace name
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Invite Someone
          </th>
        </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
        <tr>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            <%= @workspace.name %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm">
            <%= link_to 'Invite', '#', class: 'text-indigo-600 hover:text-indigo-900' %>
          </td>
        </tr>
        </tbody>
      </table>
    </div>

    <div class="px-6 py-4 flex gap-4">
      <%= link_to 'Edit', edit_workspace_path,
                  class: 'inline-flex items-center px-4 py-2 border border-indigo-600 rounded-md text-sm font-medium text-indigo-600 hover:bg-indigo-600 hover:text-white transition-colors duration-150' %>

      <%= button_to 'Delete', @workspace,
                    method: :delete,
                    data: { turbo_confirm: "Are you sure?" },
                    class: 'inline-flex items-center px-4 py-2 border border-red-600 rounded-md text-sm font-medium text-red-600 hover:bg-red-600 hover:text-white transition-colors duration-150' %>

      <%= link_to 'Back', workspaces_path,
                  class: 'inline-flex items-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors duration-150' %>
    </div>
  </div>
</div>